---
import Heading from "../ui/Heading.astro";

interface Product {
  total: number;
}

interface Props {
  product?: Product;
  total?: number;
}

const { product, total: directTotal } = Astro.props;

// Use direct total if provided, otherwise get from product object
const priceTotal =
  directTotal !== undefined ? directTotal : product?.total || 0;

const formatCurrency = (amount: number) => {
  return new Intl.NumberFormat("en-IN", {
    style: "currency",
    currency: "INR",
  }).format(amount);
};
---

<Heading fontweight="normal" size="sm"
  ><b>Price:</b> {formatCurrency(priceTotal)}</Heading
>
