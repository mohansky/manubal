---
import Layout from '../layouts/Layout.astro';
import Container from '../components/ui/Container.astro';
import { redirectIfAuthenticated } from '../lib/auth-utils';

// Redirect if already logged in
const redirectResponse = await redirectIfAuthenticated(Astro);
if (redirectResponse) return redirectResponse;
---

<Layout title="Forgot Password">
  <Container width="marginy">
    <main class="min-h-screen flex items-center justify-center bg-base-200 p-4">
      <div class="card w-96 bg-base-100 shadow-xl">
        <div class="card-body">
          <h2 class="card-title justify-center mb-4">Forgot Password</h2>
          <p class="text-center text-sm text-base-content/70 mb-6">
            Enter your email address and we'll send you a link to reset your password.
          </p>
          
          <form id="forgotPasswordForm" class="space-y-4">
            <div class="form-control">
              <label class="label">
                <span class="label-text">Email Address</span>
              </label>
              <input
                type="email"
                name="email"
                placeholder="Enter your email"
                class="input input-bordered w-full"
                required
              />
            </div>

            <div id="successAlert" class="alert alert-success hidden">
              <span id="successMessage">Password reset link sent to your email!</span>
            </div>

            <div id="errorAlert" class="alert alert-error hidden">
              <span id="errorMessage"></span>
            </div>

            <div class="form-control mt-6">
              <button 
                type="submit" 
                id="submitBtn"
                class="btn btn-primary"
              >
                Send Reset Link
              </button>
            </div>
          </form>

          <div class="divider">OR</div>
          
          <div class="text-center space-y-2">
            <p>
              Remember your password?{' '}
              <a href="/login" class="link link-primary">
                Sign in
              </a>
            </p>
            <p>
              Don't have an account?{' '}
              <a href="/register" class="link link-primary">
                Sign up
              </a>
            </p>
          </div>
        </div>
      </div>
    </main>
  </Container>
</Layout>

<script>
  import { createAuthClient } from "better-auth/client";
  
  const authClient = createAuthClient({
    baseURL: window.location.origin,
  });

  document.getElementById('forgotPasswordForm')?.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const form = e.target as HTMLFormElement;
    const formData = new FormData(form);
    const email = formData.get('email') as string;
    
    const submitBtn = document.getElementById('submitBtn') as HTMLButtonElement;
    const errorAlert = document.getElementById('errorAlert') as HTMLElement;
    const successAlert = document.getElementById('successAlert') as HTMLElement;
    const errorMessage = document.getElementById('errorMessage') as HTMLElement;
    
    // Show loading state
    submitBtn.classList.add('loading');
    submitBtn.disabled = true;
    errorAlert.classList.add('hidden');
    successAlert.classList.add('hidden');
    
    try {
      const { data, error } = await authClient.forgetPassword({
        email,
        redirectTo: "/reset-password",
      });
      
      if (data && !error) {
        successAlert.classList.remove('hidden');
        form.reset();
        
        // Optional: Redirect to login after delay
        setTimeout(() => {
          window.location.href = '/login';
        }, 3000);
      } else {
        errorMessage.textContent = error?.message || 'Failed to send reset email';
        errorAlert.classList.remove('hidden');
      }
    } catch (error) {
      errorMessage.textContent = 'An error occurred. Please try again.';
      errorAlert.classList.remove('hidden');
    } finally {
      submitBtn.classList.remove('loading');
      submitBtn.disabled = false;
    }
  });
</script>
</Layout>